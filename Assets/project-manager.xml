<?xml version="1.0" encoding="utf-8"?>
<vbox id="main" width="100%" height="100%" >
    <hbox id="header">
        <label text="Foundry Engine - Project Manager" horizontalAlign="left" />
    </hbox>
    <hbox width="100%" height="90%" >
        <tabview id="container" width="80%" height="100%" >
            <vbox id="projects-tab" text="Projects" width="100%" height="100%" >
                <listview id="projectslist" width="100%" height="100%" />
            </vbox>
            <vbox id="templates-tab" text="Templates" width="100%" height="100%" >
                <listview id="templates" width="100%" height="100%" />
            </vbox>
        </tabview>
        <vbox id="buttons" width="20%" height="100%" >
            <button id="run" text="Run" width="100%" />
            <button id="newproject" text="New Project" width="100%" />
            <button id="importProject" text="Import" width="100%" />
            <button id="delete" text="Delete Project" width="100%" />
            <button id="deleteConfig" text="Delete App Config" width="100%" />
        </vbox>
    </hbox>
</vbox>